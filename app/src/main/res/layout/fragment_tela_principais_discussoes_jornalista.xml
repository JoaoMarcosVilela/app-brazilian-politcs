<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6BECE4"
    tools:context=".fragments.jornalista.TelaPrincipaisDiscussoesJornalista">

    <ListView
        android:id="@+id/listViewPrincipaisDiscussoes"
        android:layout_width="0dp"
        android:layout_height="509dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarTelaPrinciapaisDiscussoesJornalista" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCadastrarDiscussoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="325dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        android:src="@drawable/plus"
        app:backgroundTint="#850808"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewPrincipaisDiscussoes" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTelaPrinciapaisDiscussoesJornalista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/silver"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>